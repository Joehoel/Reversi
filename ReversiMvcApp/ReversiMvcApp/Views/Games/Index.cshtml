@model IEnumerable<ReversiMvcApp.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player1Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player2Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TurnColor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Token)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player1Token)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player2Token)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TurnColor)
                </td>
                <td>
                    <a asp-action="Join" asp-route-id="@item.Token">Join</a> |
                    <a asp-action="Delete" asp-route-id="@item.Token">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
